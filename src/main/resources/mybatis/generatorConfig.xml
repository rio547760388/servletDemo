<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!-- 加载属性文件 -->
    <properties resource="mybatis/jdbc.properties"/>

    <classPathEntry location="${jdbc.location}"/>

    <context id="context" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="javaFileEncoding" value="utf-8"/>

        <!--是否创建 Service-->
        <property name="createService" value="false"/>

        <!--Service 路径-->
        <property name="servicePackage" value="${service.package}"/>

        <!--mapper 路径-->
        <property name="mapperPackage" value="${mapper.package}"/>

        <!-- Lombok 插件 -->
        <plugin type="com.ronhan.mybatis.plugin.LombokPlugin">
            <property name="hasLombok" value="true"/>
        </plugin>

        <!-- 继承 bomidou 的 BaseMapper, 第一次生成时创建 Service -->
        <plugin type="com.ronhan.mybatis.plugin.PageAndPlusPlugin"/>

        <!-- 选择需要生成的代码片段 (用于重复生成) genModel:是否生成实体类,genExample:是否生成Example；
            genMapper:是否生成Mapper，genXml:是否生成sqlMap xml -->
        <plugin type="com.ronhan.mybatis.plugin.SwitchCodeGenPlugin">
            <property name="genModel" value="true"/>
            <property name="genExample" value="true"/>
            <property name="genMapper" value="true"/>
            <property name="genXml" value="true"/>
        </plugin>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>

        <!-- 数据库连接信息 -->
        <jdbcConnection driverClass="${jdbc.driver}"
                        connectionURL="${jdbc.url}" userId="${jdbc.username}"
                        password="${jdbc.password}"/>

        <!--JDBC类型和Java类型如何转换-->
        <javaTypeResolver type="com.ronhan.mybatis.plugin.TypeResolverPlugin">
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成模型的包名和位置-->
        <javaModelGenerator targetPackage="${entity.target.package}" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <!--是否对数据库查询结果进行trim操作-->
            <property name="trimStrings" value="false"/>
        </javaModelGenerator>

        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- 生成DAO的包名和位置 注解方式：type=ANNOTATEDMAPPER -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="org.rio.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>


        <table tableName="users" domainObjectName="Users"/>

    </context>
</generatorConfiguration>